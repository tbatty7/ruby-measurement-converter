<%# app/views/conversions/index.html.erb %>
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-light-blue-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
        <div class="divide-y divide-gray-200">
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
            <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Measurement Converter</h1>
            
            <%= form_tag conversions_path, method: :post, class: "space-y-6" do %>
              <div class="flex flex-col space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700">Value</label>
                  <div class="mt-1">
                    <%= number_field_tag :value, @value, step: 'any', required: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700">From</label>
                    <div class="mt-1">
                      <%= select_tag :from_unit,
                        options_for_select([
                          ['Meters', 'meters'],
                          ['Feet', 'feet'],
                          ['Inches', 'inches'],
                          ['Kilometers', 'kilometers'],
                          ['Miles', 'miles'],
                          ['Kilograms', 'kilograms'],
                          ['Pounds', 'pounds'],
                          ['Ounces', 'ounces'],
                          ['Liters', 'liters'],
                          ['Gallons', 'gallons'],
                          ['Cups', 'cups'],
                          ['Milliliters', 'milliliters']
                        ], @from_unit),
                        { prompt: 'Select unit', class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
                    </div>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700">To</label>
                    <div class="mt-1">
                      <%= select_tag :to_unit,
                        options_for_select([
                          ['Meters', 'meters'],
                          ['Feet', 'feet'],
                          ['Inches', 'inches'],
                          ['Kilometers', 'kilometers'],
                          ['Miles', 'miles'],
                          ['Kilograms', 'kilograms'],
                          ['Pounds', 'pounds'],
                          ['Ounces', 'ounces'],
                          ['Liters', 'liters'],
                          ['Gallons', 'gallons'],
                          ['Cups', 'cups'],
                          ['Milliliters', 'milliliters']
                        ], @to_unit),
                        { prompt: 'Select unit', class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
                    </div>
                  </div>
                </div>

                <div class="pt-4">
                  <%= submit_tag "Convert", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                </div>
              </div>
            <% end %>

            <% if @result %>
              <div class="mt-8 p-4 bg-gray-50 rounded-lg">
                <h2 class="text-lg font-semibold text-gray-700">Result:</h2>
                <p class="mt-2 text-2xl font-bold text-indigo-600">
                  <%= @value %> <%= @from_unit %> = <%= @result %> <%= @to_unit %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
